<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.hono</groupId>
    <artifactId>hono-bom</artifactId>
    <version>0.5-M3-SNAPSHOT</version>
    <relativePath>../bom</relativePath>
  </parent>
  <artifactId>hono-config</artifactId>
  <description>Default Hono server configuration to be used by other modules.</description>

  <properties>
    <image.target>hono-default-config</image.target>
    <maven.source.skip>true</maven.source.skip>
    <maven.javadoc.skip>true</maven.javadoc.skip>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>${project.basedir}/config</directory>
        <includes>
          <include>**/*</include>
        </includes>
        <targetPath>config</targetPath>
      </resource>
      <resource>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
  </build>

  <profiles>
    <profile>
      <id>build-docker-image</id>
      <activation>
        <property>
          <name>docker.host</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.apache.activemq</groupId>
          <artifactId>apache-artemis</artifactId>
          <version>${artemis.version}</version>
          <classifier>bin</classifier>
          <type>tar.gz</type>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.10</version>
            <executions>
              <execution>
                <id>unpack-artemis</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.apache.activemq</groupId>
                      <artifactId>apache-artemis</artifactId>
                      <classifier>bin</classifier>
                      <type>tar.gz</type>
                      <outputDirectory>target/dependencies/artemis</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <configuration>
              <images>
                <image>
                  <build>
                    <from>tianon/true</from>
                    <volumes>
                      <volume>/etc/hono</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/etc/hono</basedir>
                      <inline>
                        <id>config</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/src/main/resources</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
                <image>
                  <alias>qpid-default-config</alias>
                  <name>eclipsehono/qpid-default-config:${project.version}</name>
                  <build>
                    <from>tianon/true</from>
                    <tags>
                      <tag>latest</tag>
                      <tag>${project.version}</tag>
                      <tag>${timestamp}</tag>
                    </tags>
                    <volumes>
                      <volume>/etc/qpid-dispatch</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/etc/qpid-dispatch</basedir>
                      <inline>
                        <id>qpid-dispatch</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/qpid</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
                <image>
                  <alias>qpid-broker-config</alias>
                  <name>eclipsehono/qpid-broker-config:${project.version}</name>
                  <build>
                    <from>tianon/true</from>
                    <tags>
                      <tag>latest</tag>
                      <tag>${project.version}</tag>
                      <tag>${timestamp}</tag>
                    </tags>
                    <volumes>
                      <volume>/etc/qpid-dispatch</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/etc/qpid-dispatch</basedir>
                      <inline>
                        <id>qpid-dispatch</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/qpid-with-broker</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
                <image>
                  <alias>qpid-sasldb</alias>
                  <name>eclipsehono/qpid-sasldb:${project.version}</name>
                  <build>
                    <from>tianon/true</from>
                    <tags>
                      <tag>latest</tag>
                      <tag>${project.version}</tag>
                      <tag>${timestamp}</tag>
                    </tags>
                    <volumes>
                      <volume>/var/lib/qdrouterd</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/var/lib/qdrouterd</basedir>
                      <inline>
                        <id>qpid-sasldb</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/sasl</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
                <image>
                  <alias>activemq-artemis</alias>
                  <name>eclipsehono/activemq-artemis:${project.version}</name>
                  <build>
                    <from>java:8u40</from>
                    <assembly>
                      <descriptor>/src/main/descriptors/hono-artemis.xml</descriptor>
                    </assembly>
                      <runCmds>
                        <run>/maven/bin/artemis create artemis --user admin --password admin --role admins --require-login</run>
                      </runCmds>
                    <entryPoint>
                      <shell>/artemis/bin/artemis run</shell>
                    </entryPoint>
                    <ports>
                      <port>5672</port>
                    </ports>
                    <volumes>
                      <volume>/maven/data</volume>
                    </volumes>
                  </build>
                </image>
                <image>
                  <alias>artemis-default-config</alias>
                  <name>eclipsehono/artemis-default-config:${project.version}</name>
                  <build>
                    <from>tianon/true</from>
                    <tags>
                      <tag>latest</tag>
                      <tag>${project.version}</tag>
                      <tag>${timestamp}</tag>
                    </tags>
                    <volumes>
                      <volume>/artemis/etc</volume>
                    </volumes>
                    <assembly>
                      <mode>dir</mode>
                      <basedir>/artemis/etc</basedir>
                      <inline>
                        <id>artemis-broker</id>
                        <fileSets>
                          <fileSet>
                            <directory>${project.basedir}/artemis/etc</directory>
                            <outputDirectory>.</outputDirectory>
                            <includes>
                              <include>**/*</include>
                            </includes>
                          </fileSet>
                        </fileSets>
                      </inline>
                    </assembly>
                  </build>
                </image>
              </images>
            </configuration>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <name>Hono Configuration</name>
</project>